<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/darkCerulean</item>
        <item name="colorAccent">@color/dodgerBlue</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:editTextColor">@color/colorPrimary</item>
        <item name="actionBarTheme">@style/AppTheme.ActionBarTheme</item>
        <item name="drawerArrowStyle">@style/DrawerIcon</item>
        <item name="android:actionOverflowButtonStyle">@style/MyActionButtonOverflow</item>
        <item name="toolbarNavigationButtonStyle">@style/WhiteNavigationButton</item>
        <item name="editTextStyle">@style/BorderTxt</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
    </style>

    <style name="AppTheme.MyAccount" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="drawerArrowStyle">@style/DrawerIconLight</item>
        <item name="android:actionOverflowButtonStyle">@style/MyActionButtonOverflowLight</item>
    </style>

    <style name="AppTheme.ActionBarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- THIS is where you can color the arrow and the overflow button! -->
        <item name="colorControlNormal">@color/white
        </item> <!-- sets the color for the back arrow -->
        <item name="actionOverflowButtonStyle">@style/actionOverflowButtonStyle
        </item>
        <item name="android:titleTextColor">@color/white</item>
    </style>

    <!-- This style is where you define the tint color of your overflow menu button -->
    <style name="actionOverflowButtonStyle" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="fabStyle" parent="@style/Widget.MaterialComponents.FloatingActionButton">
        <item name="maxImageSize">56dp</item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DrawerIcon" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/colorPrimary</item>
    </style>

    <style name="DrawerIconLight" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>
    </style>

    <style name="MyActionButtonOverflow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/colorPrimary</item>
    </style>

    <style name="MyActionButtonOverflowLight" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="ToolbarLightButtonsTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="WhiteNavigationButton" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="SectionsBanner" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Sections" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="BorderTxt" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">@drawable/border_txt</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ButtonBack" parent="Widget.AppCompat.Button">
        <item name="android:text">@string/back</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:background">@drawable/btn_back_shape</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">1dp</item>

    </style>

    <style name="ButtonNext" parent="Widget.AppCompat.Button">
        <item name="android:text">@string/next</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/btn_next_shape</item>
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:layout_marginRight">10dp</item>

    </style>

    <style name="ContainerStyle">
        <item name="android:background">@drawable/border_container</item>
        <item name="android:elevation">5dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="PopupMenu" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:itemBackground">@drawable/border_fab_menu_item</item>
        <item name="android:textSize">18sp</item>
        <item name="android:listPreferredItemHeightSmall">60dp</item>
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:colorBackground">@android:color/transparent</item>

    </style>


</resources>
