<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registerGroup.regForm.views.RegFormActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme"
            app:elevation="0dp">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbarRegFormActivity"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/white"
                app:titleTextColor="@color/colorPrimary" />

        </com.google.android.material.appbar.AppBarLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView13"
                        android:layout_width="match_parent"
                        android:layout_height="125dp"
                        android:layout_marginTop="40dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/logo_celer_mail" />

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="wrap_content"
                        android:layout_height="125dp"
                        android:layout_marginTop="40dp"
                        android:layout_weight="3"
                        app:srcCompat="@drawable/logo_title_celer_mail" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView28"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="15dp"
                    android:text="@string/register"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/textView24"
                    style="@style/SectionsBanner"
                    android:text="@string/profilePicture"
                    android:layout_width="match_parent"
                    android:gravity="center" />

                <Button
                    android:id="@+id/editText15"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/border_txt"
                    android:ems="10"
                    android:enabled="false"
                    android:hint="@string/setImage"
                    android:inputType="textPersonName" />

                <TextView
                    android:id="@+id/txtAccountName"
                    style="@style/SectionsBanner"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/colorPrimary"
                    android:text="@string/menu_personal_data" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/editTextName"
                        style="@style/BorderTxt"
                        android:layout_width="match_parent"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/border_txt"
                        android:ems="10"
                        android:hint="Nombre"
                        android:inputType="textPersonName" />

                    <EditText
                        android:id="@+id/editTextSurname"
                        style="@style/BorderTxt"
                        android:layout_width="match_parent"
                        android:background="@drawable/border_txt"
                        android:ems="10"
                        android:hint="Apellidos"
                        android:inputType="textPersonName" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/border_txt"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/editTextBirthdate"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:ems="10"
                            android:hint="Fecha de nacimiento"
                            android:textSize="16sp" />

                        <Button
                            android:id="@+id/btnCalendar"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_weight="6"
                            android:background="@drawable/calendar"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <Spinner
                        android:id="@+id/spGender"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/border_spinner" />

                    <Spinner
                        android:id="@+id/spCountrie"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/border_spinner" />

                    <EditText
                        android:id="@+id/editTextPhone"
                        style="@style/BorderTxt"
                        android:layout_width="match_parent"
                        android:ems="10"
                        android:hint="Teléfono"
                        android:inputType="phone" />

                    <EditText
                        android:id="@+id/editTextRegEmail"
                        style="@style/BorderTxt"
                        android:layout_width="match_parent"
                        android:ems="10"
                        android:hint="Email"
                        android:inputType="textEmailAddress" />

                    <EditText
                        android:id="@+id/editTextRegPassword"
                        style="@style/BorderTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Contraseña"
                        android:inputType="textPassword" />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <LinearLayout
            style="@style/Widget.AppCompat.ButtonBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnRegFormToId"
                style="@style/ButtonBack"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="goToPrivacy" />

            <Button
                android:id="@+id/btnRegister"
                style="@style/ButtonNext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Registrarse" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>